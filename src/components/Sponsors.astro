---
// Sponsors component for FLISol Guayaquil
const sponsors = [
  {
    name: "Mento",
    logo: "mento_logo.webp",
    alt: "Logo Mento",
    link: "https://mentocreativo.com/",
  },
  {
    name: "UCSG",
    logo: "ucsg_logo.webp",
    alt: "Logo UCSG",
    link: "https://www.ucsg.edu.ec/ing/",
  },
  {
    name: "Musyana Store",
    logo: "musyana_store.webp",
    alt: "Logo Musyana Store",
    link: "https://musyanastore.com/",
  },
];
---

<section id="sponsors" class="bg-secondary py-86 px-4">
  <div class="container d-flex flex-column gap-4 align-items-center">
    <h2 class="ds-xs-3 fw-bold text-primary text-100 my-auto">Sponsors</h2>
    <ul
      class="d-flex flex-wrap gap-2 align-items-center justify-content-center list-unstyled"
      data-aos="fade-up"
    >
      {
        sponsors.map((sponsor) => (
          <li class="d-flex flex-column align-items-center">
            <a
              href={sponsor.link}
              target="_blank"
              rel="noopener noreferrer"
              class="hover-up"
            >
              <img
                src={`/assets/images/sponsors/${sponsor.logo}`}
                alt={sponsor.alt}
                class="object-fit-contain"
                width="200"
                loading="lazy"
              />
            </a>
            <p class="visually-hidden">{sponsor.name}</p>
          </li>
        ))
      }
    </ul>
  </div>
</section>
