---
// Header component for FLISol Guayaquil with improved accessibility
---

<header class="w-100">
  <nav
    class="navbar navbar-expand-lg w-100 vw-100 z-999 position-fixed top-0 start-0 bg-primary px-0"
    aria-label="Navegación principal"
  >
    <div class="container-fluid px-md-8 px-4 mx-0">
      <a
        class="navbar-brand d-flex main-logo align-items-center"
        href="/"
        aria-label="FLISol Guayaquil Inicio"
      >
        <img
          src="/assets/images/logo_flisol_icon_white.svg"
          alt="Logo FLISol Guayaquil"
          class="navLogo"
          width="50"
          height="50"
        />
      </a>
      <div class="d-none d-lg-flex">
        <ul class="navbar-nav mx-auto gap-4 align-items-lg-center">
          <li class="nav-item">
            <a
              class="nav-link fw-bold d-flex align-items-center text-white navLink"
              href="#comunidades"
              >Comunidades</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link fw-bold d-flex align-items-center text-white navLink"
              href="#agenda"
              >Agenda</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link fw-bold d-flex align-items-center text-white navLink"
              href="#installfest"
              >InstallFest</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link fw-bold d-flex align-items-center text-white navLink"
              href="#sponsors"
              >Sponsors</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link fw-bold d-flex align-items-center text-white navLink"
              href="#contacto"
              >Contacto</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link fw-bold d-flex align-items-center text-white navLink"
              href="/thanks"
              >Agradecimientos</a
            >
          </li>
        </ul>
      </div>
      <div class="d-flex gap-2 align-items-center">
        <a
          href="https://lu.ma/qq6m2ohc"
          target="_blank" 
          rel="noopener noreferrer"
          class="d-none d-lg-flex btn bg-white text-primary hover-up bg-transparent text-100 p-2 px-4"
          aria-label="Inscríbete al evento"
        >
          Inscríbete
          <svg
            class="ms-2"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            aria-hidden="true"
          >
            <path
              d="M17.25 15.25V6.75H8.75"
              stroke="#4c7bd0"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            ></path>
            <path
              d="M17 7L6.75 17.25"
              stroke="#4c7bd0"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            ></path>
          </svg>
        </a>
        <button
          type="button"
          class="burger-icon burger-icon-white border rounded-3 position-relative top-0 end-0"
          aria-expanded="false"
          aria-label="Menú móvil"
          aria-controls="mobile-menu"
        >
          <span class="burger-icon-top"></span>
          <span class="burger-icon-mid"></span>
          <span class="burger-icon-bottom"></span>
        </button>
      </div>
    </div>
  </nav>

  <div
    class="mobile-header-active mobile-header-wrapper-style perfect-scrollbar button-bg-2"
    id="mobile-menu"
    aria-hidden="true"
  >
    <div class="mobile-header-wrapper-inner">
      <div class="mobile-header-logo">
        <a
          class="navbar-brand d-flex main-logo align-items-center"
          href="/"
          aria-label="FLISol Guayaquil Inicio"
        >
          <img
            src="/assets/images/logo-flisol-azul-2.png"
            alt="Logo FLISol Guayaquil"
            width="200"
            height="auto"
          />
        </a>
        <button
          type="button"
          class="burger-icon burger-icon-white border rounded-3"
          aria-expanded="true"
          aria-label="Cerrar menú móvil"
        >
          <span class="burger-icon-top"></span>
          <span class="burger-icon-mid"></span>
          <span class="burger-icon-bottom"></span>
        </button>
      </div>

      <div class="mobile-header-content-area">
        <div class="perfect-scroll">
          <div class="mobile-menu-wrap mobile-header-border">
            <nav aria-label="Navegación móvil">
              <ul class="mobile-menu font-heading ps-0">
                <li>
                  <a href="#comunidades" class="hover-text-primary"
                    >Comunidades</a
                  >
                </li>
                <li class="hover-text-primary">
                  <a href="#inscripciones">Inscripciones</a>
                </li>
                <li class="hover-text-primary">
                  <a href="#agenda">Agenda</a>
                </li>
                <li class="hover-text-primary">
                  <a href="#installfest">InstallFest</a>
                </li>
                <li class="hover-text-primary">
                  <a href="#sponsors">Sponsors</a>
                </li>
                <li class="hover-text-primary">
                  <a href="#contacto">Contacto</a>
                </li>
                <li class="hover-text-primary">
                  <a href="/thanks">Agradecimientos</a>
                </li>
              </ul>
            </nav>
            <div class="mobile-cta mt-4">
              <a
                href="https://lu.ma/qq6m2ohc"
                target="_blank" 
                rel="noopener noreferrer"
                class="btn bg-primary text-white w-100 mb-3 p-2 text-center"
                aria-label="Inscríbete al evento desde el menú móvil"
              >
                Inscríbete
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  /* Fix for the white border issue */
  header {
    overflow-x: hidden;
  }
  
  nav.navbar {
    margin: 0;
    padding-left: 0;
    padding-right: 0;
    width: 100vw;
    max-width: 100vw;
    left: 0;
    right: 0;
  }
</style>

<script>
  // Add this script to handle mobile menu toggling with proper accessibility
  document.addEventListener('DOMContentLoaded', () => {
    const burgerButtons = document.querySelectorAll('.burger-icon');
    const mobileMenu = document.getElementById('mobile-menu');
    
    burgerButtons.forEach(button => {
      button.addEventListener('click', () => {
        const isExpanded = button.getAttribute('aria-expanded') === 'true';
        
        burgerButtons.forEach(btn => {
          btn.setAttribute('aria-expanded', (!isExpanded).toString());
        });
        
        if (mobileMenu) {
          mobileMenu.setAttribute('aria-hidden', isExpanded.toString());
          mobileMenu.classList.toggle('active', !isExpanded);
          document.body.classList.toggle('mobile-menu-active', !isExpanded);
        }
      });
    });
    
    // Close menu when clicking on a link
    const mobileLinks = document.querySelectorAll('#mobile-menu a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        burgerButtons.forEach(btn => {
          btn.setAttribute('aria-expanded', 'false');
        });
        
        if (mobileMenu) {
          mobileMenu.setAttribute('aria-hidden', 'true');
          mobileMenu.classList.remove('active');
          document.body.classList.remove('mobile-menu-active');
        }
      });
    });
  });
</script> 